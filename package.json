{
  "name": "@epimodev/sarv",
  "version": "1.0.0",
  "description": "a static file server to serve spa with compressed files, based on polka and inspired by sirv",
  "repository": "Epimodev/sarv",
  "author": "Frederic Godin",
  "license": "MIT",
  "files": [
    "./module"
  ],
  "bin": {
    "sarv": "./module/src/index.js"
  },
  "scripts": {
    "sarv": "./module/src/index.js",
    "lint": "eslint --env node src/**/*.ts",
    "build": "rm -rf module && tsc",
    "pre-commit": "lint-staged",
    "commit": "yarn pre-commit && git-cz",
    "prepublish": "yarn lint && yarn build"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "compressible": "^2.0.17",
    "console-clear": "^1.1.1",
    "fs-extra": "^8.1.0",
    "get-port": "^5.0.0",
    "kleur": "^3.0.3",
    "local-access": "^1.0.1",
    "mime": "^2.4.4",
    "polka": "^0.5.2",
    "sade": "^1.6.1",
    "xxhashjs": "^0.2.2"
  },
  "devDependencies": {
    "@types/compressible": "^2.0.0",
    "@types/fs-extra": "^8.0.1",
    "@types/mime": "^2.0.1",
    "@types/node": "^12.12.7",
    "@types/sade": "^1.6.0",
    "@types/xxhashjs": "^0.2.1",
    "@typescript-eslint/parser": "^2.6.1",
    "commitizen": "^4.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "lint-staged": "^9.4.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  }
}
